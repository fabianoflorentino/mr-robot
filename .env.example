# Mr. Robot Application Environment Variables
# Copy this file to config/.env and adjust values as needed

# Application Configuration
APP_NAME="Mr Robot"
APP_PORT=8888
GIN_MODE=release
TZ=America/Sao_Paulo

# Database Configuration
POSTGRES_HOST=mr_robot_db
POSTGRES_USER=mr_robot
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=mr_robot
POSTGRES_PORT=5432
POSTGRES_LOCAL_PORT=5432
POSTGRES_SSLMODE=disable
POSTGRES_TIMEZONE=UTC

# External Services
DEFAULT_PROCESSOR_URL=http://default-processor:8080/default

# Docker Configuration
IMAGE_TAG=v0.0.1
COMPOSE_PROJECT_NAME=mr-robot

# Development Settings (only for dev environment)
DEBUG=true
LOG_LEVEL=debug
HOT_RELOAD=true
