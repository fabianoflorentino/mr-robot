FROM golang:alpine3.22 AS build

WORKDIR /mr_robot

COPY . .

RUN apk update -y --no-cache \
  && apk upgrade -y --no-cache \
  && apk add git --no-cache \
  && go mod download \
  && go install github.com/air-verse/air@latest

EXPOSE 8888

ENTRYPOINT [ "/go/bin/air" ]

CMD [ "-c", "/mr_robot/build/air.toml" ]
